@model ConsultantUpdateViewModel

<form>
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light rounded h-100 p-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-3"> <h6 class="mb-4">Danışman Bilgileri</h6></div>
                <div class="col-3"> <img src="~/Images/@Model.ImageUrl" width="150" height="200" /></div>
            </div>
            <div class="row">
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="FirstName"></label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" asp-for="FirstName">
                    </div>
                </div>
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="LastName"></label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" asp-for="LastName">
                    </div>
                </div>
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="UserName"></label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" asp-for="UserName">
                    </div>
                </div>
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="Email"></label>
                    <div class="col-sm-12">
                        <input type="email" class="form-control" asp-for="Email">
                    </div>
                </div>
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="Phone"></label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" asp-for="Phone">
                    </div>
                </div>
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="Gender"></label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" asp-for="Gender">
                    </div>
                </div>
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="DateOfBirth"></label>
                    <div class="col-sm-12">
                        <input type="date" class="form-control" asp-for="DateOfBirth">
                    </div>
                </div>
                <div class="row mb-3 col-sm-12 col-xl-6">
                    <label class="col col-form-label" asp-for="City"></label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" asp-for="City">
                    </div>
                </div>

                <div class="row mb-3 col-sm-12 col-xl-12">
                    <label class="col col-form-label" asp-for="Address"></label>
                    <div class="col-sm-12">
                        <textarea type="text" class="form-control" asp-for="Address"></textarea>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="emailConfirm" asp-for="EmailConfirmed">
                        <label class="form-check-label" for="emailConfirm" asp-for="EmailConfirmed">
                        </label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="phoneConfirm" asp-for="PhoneConfirmed">
                        <label class="form-check-label" for="phoneConfirm" asp-for="PhoneConfirmed">
                        </label>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="container-fluid pt-4 px-4">
        <div class="bg-light rounded h-100 p-4">
            <div class="row">
                <div class="mb-3 col-sm-12 ">
                    <div class="bg-light rounded h-100">
                        <h6 class="mb-4">Danışmanlık Bilgileri</h6>
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <button class="nav-link active" id="nav-education-tab" data-bs-toggle="tab"
                                        data-bs-target="#nav-education" type="button" role="tab" aria-controls="nav-education"
                                        aria-selected="true">
                                    Eğitimler
                                </button>
                                <button class="nav-link" id="nav-certificate-tab" data-bs-toggle="tab"
                                        data-bs-target="#nav-certificate" type="button" role="tab"
                                        aria-controls="nav-certificate" aria-selected="false">
                                    Sertifikalar
                                </button>
                                <button class="nav-link" id="nav-specialization-tab" data-bs-toggle="tab"
                                        data-bs-target="#nav-specialization" type="button" role="tab"
                                        aria-controls="nav-specialization" aria-selected="false">
                                    Uzmanlık Alanı
                                </button>
                            </div>
                        </nav>
                        <div class="tab-content pt-3" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-education" role="tabpanel" aria-labelledby="nav-education-tab">
                                <div class="accordion" id="accordionEducation">
                                    @foreach (var education in Model.Educations)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="educationHeading-@education.Id">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#education-@education.Id" aria-expanded="true"
                                                        aria-controls="education-@education.Id">
                                                    @education.DepartmentName (@education.DegreeofGraduation )
                                                </button>
                                            </h2>
                                            <div id="education-@education.Id" class="accordion-collapse collapse"
                                                 aria-labelledby="educationHeading-@education.Id">
                                                <div class="accordion-body">
                                                    @education.FacultyName - @education.DepartmentName - @education.GraduationYear
                                                </div>
                                            </div>
                                        </div>

                                    }
                                    <button type="button" class="btn btn-success mt-2" data-bs-toggle="modal" data-bs-target="#educationExampleModal">
                                        <i class="fa-solid fa-circle-plus"></i> Ekle
                                    </button>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="nav-certificate" role="tabpanel" aria-labelledby="nav-certificate-tab">
                                <div class="accordion" id="accordionCertificate">
                                    @foreach (var certificate in Model.Certificates)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="certificateHeading-@certificate.Id">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#certificate-@certificate.Id" aria-expanded="true"
                                                        aria-controls="certificate-@certificate.Id">
                                                    @certificate.CertificateName (@certificate.CertificateTime )
                                                </button>
                                            </h2>
                                            <div id="certificate-@certificate.Id" class="accordion-collapse collapse"
                                                 aria-labelledby="certificateHeading-@certificate.Id">
                                                <div class="accordion-body">
                                                    @certificate.Institution - @certificate.CertificateName - @certificate.CertificateTime
                                                </div>
                                            </div>
                                        </div>

                                    }
                                    <button type="button" class="btn btn-success mt-2" data-bs-toggle="modal" data-bs-target="#certificateExampleModal">
                                        <i class="fa-solid fa-circle-plus"></i> Ekle
                                    </button>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="nav-specialization" role="tabpanel" aria-labelledby="nav-specialization-tab">
                                <ul class="list-group">
                                    @foreach (var specialization in Model.Specializations)
                                    {
                                        <li class="list-group-item bg-light float-end">@specialization.Name</li>
                                    }

                                </ul>
                                <button type="button" class="btn btn-success mt-2" data-bs-toggle="modal" data-bs-target="#specializationExampleModal">
                                    <i class="fa-solid fa-circle-plus"></i> Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="row mb-3 col-sm-12 col-xl-6">
                        <label class="col col-form-label" asp-for="JobTitle"></label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" asp-for="JobTitle">
                        </div>
                    </div>
                    <div class="row mb-3 col-sm-12 col-xl-6">
                        <label class="col col-form-label" asp-for="VisitsPrice"></label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" asp-for="VisitsPrice">
                        </div>
                    </div>
                    <div class="row mb-3 col-12 ">
                        <label class="col col-form-label" asp-for="Promotion"></label>
                        <div class="col-12">
                            <textarea id="editor" type="text" class="form-control" asp-for="Promotion"></textarea>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-12">
                <label class="col col-form-label">Oluşturma Zamanı: @Model.CreatedTime</label>
            </div>
            <div class="col-12">
                <label class="col col-form-label">En Son Güncelleme Zamanı: @Model.UpdateTime</label>

            </div>
            <a type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Consultant" asp-action="Index">Geri Dön</a>

        </div>
    </div>
</form>


