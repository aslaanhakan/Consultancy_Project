<!-- Add Specialization Modal -->
<form
    asp-area="Admin"
      asp-controller="Consultant"
      asp-action="EditSpecialization"
    method="post"
    >
    <input type="hidden" asp-for="ConsultantId" />
    <div class="modal fade" id="specializationExampleModal" tabindex="-1" aria-labelledby="specializationExampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="specializationExampleModalLabel">Uzmanlık Bilgisi Ekle</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @*NonMembers*@
                        <div class="col-6">
                            <h6 class="bg-primary text-white p-3">Olmayan Uzmanlıklar</h6>
                            @if (Model.Specializations.Count == 0)
                            {
                                <div class="alert alert-warning">
                                    Bütün uzmanlıklar ekli.
                                </div>
                            }
                            else
                            {
                                <table class="table table-sm table-bordered">
                                    @foreach (var specialization in Model.NonSpecialization)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" class="form-check-input" name="IdsToAddSpecialization" value="@specialization.Id" />
                                                <label class="form-check-label">
                                                    @specialization.Name
                                                </label>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            }
                        </div>
                        @*Members*@
                        <div class="col-6">
                            <h6 class="bg-primary text-white p-3">Olan Uzmanlıklar</h6>
                            @if (Model.Specializations.Count == 0)
                            {
                                <div class="alert alert-warning">
                                   Hiç bir uzmanlık eklenmemiş.
                                </div>
                            }
                            else
                            {
                                <table class="table table-sm table-bordered">
                                    @foreach (var specialization in Model.Specializations)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" class="form-check-input" name="IdsToRemoveSpecialization" value="@specialization.Id" />
                                                <label class="form-check-label">
                                                    @specialization.Name 
                                                </label>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>
