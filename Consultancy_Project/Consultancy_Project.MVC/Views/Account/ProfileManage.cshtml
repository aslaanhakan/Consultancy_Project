@model UserManageProfileViewModel
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">User</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Profilim</li>
                    </ol>
                </nav>
            </div>
        </div>
        <form asp-area=""
              asp-controller="Account"
              asp-action="ProfileManage"
              method="post"
              enctype="multipart/form-data">
            <input type="hidden" name="Id" value="@Model.Id" />


            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="~/Images/@Model.ImageUrl" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 200px;">
                            <h5 class="my-3">@Model.FirstName @Model.LastName</h5>
                            <div class="d-flex justify-content-center my-2">
                                <input asp-for="ImageFile" class="form-control" accept="image/" />
                            </div>
                        </div>
                    </div>
                    @*<div class="card mb-4 mb-lg-0">
                    <div class="card-body p-0">
                    <ul class="list-group list-group-flush rounded-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <i class="fas fa-globe fa-lg text-warning"></i>
                    <p class="mb-0">https://mdbootstrap.com</p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                    <p class="mb-0">mdbootstrap</p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                    <p class="mb-0"></p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                    <p class="mb-0">mdbootstrap</p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                    <p class="mb-0">mdbootstrap</p>
                    </li>
                    </ul>
                    </div>
                    </div>*@
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="FirstName"></label>
                                </div>
                                <div class="col-sm-4">
                                    <input class=" mb-0 form-control" asp-for="FirstName" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="LastName"></label>
                                </div>
                                <div class="col-sm-4">
                                    <input class="mb-0 form-control" asp-for="LastName" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="Email"></label>
                                </div>
                                <div class="col-sm-4">
                                    <input class=" mb-0 form-control" asp-for="Email" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="UserName"></label>
                                </div>
                                <div class="col-sm-4">
                                    <input class="mb-0 form-control" asp-for="UserName" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="Gender"></label>
                                </div>
                                <div class="col-sm-4">
                                    <select asp-for="Gender" asp-items="@Model.GenderSelectList" class="form-select">
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="DateOfBirth"></label>
                                </div>
                                <div class="col-sm-4">
                                    <input type="date" class=" mb-0 form-control" asp-for="DateOfBirth" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="Phone"></label>
                                </div>
                                <div class="col-sm-4">
                                    <input class=" mb-0 form-control" asp-for="Phone" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="City"></label>
                                </div>
                                <div class="col-sm-4">
                                    <input class=" mb-0 form-control" asp-for="City" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-2">
                                    <label class="mb-0 col-form-label" asp-for="Address"></label>
                                </div>
                                <div class="col-sm-10">
                                    <textarea class=" mb-0 form-control" asp-for="Address"></textarea>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <label class="form-check-label" asp-for="EmailConfirmed">
                                    </label>
                                </div>
                                <div class="col-sm-2">
                                    <input class="form-check-input" type="checkbox" asp-for="EmailConfirmed" disabled>
                                </div>
                                <div class="col-sm-4">

                                    <label class="form-check-label" asp-for="PhoneConfirmed"></label>
                                </div>
                                <div class="col-sm-2">
                                    <input class="form-check-input" type="checkbox" asp-for="PhoneConfirmed" disabled>
                                </div>
                            </div>
                            <hr>
                            <button type="submit" class="btn btn-success">Değişiklikleri Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>