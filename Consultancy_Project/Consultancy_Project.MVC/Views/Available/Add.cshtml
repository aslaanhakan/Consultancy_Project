@model AvailableAddViewModel
<form asp-area=""
      asp-controller="Available"
      asp-action="Add"
method="post">
<input type="hidden" asp-for="ConsultantId" />
<input type="hidden" asp-for="Date" />
    <div class="mt-3  ms-5">@Model.Date</div>

    <div class="mt-3 mb-2 ms-5">

        @foreach (var hour in Model.WorkingHours)
        {

            <input type="checkbox" class="btn-check " id="btn-check-outlined_@hour.Id" name="SelectedHours" value="@hour.Id" autocomplete="off" @if (Model.DateOfAvailables != null)
            {
                @(Model.DateOfAvailables.Any(x => x.WorkingHoursId == hour.Id) ? "disabled" : "")
            }>
            <label class="btn btn-outline-primary mb-2 me-2" for="btn-check-outlined_@hour.Id"> @hour.Hour</label>
        }
    </div>
    <button type="submit" class="btn btn-primary my-1"> Ekle</button>

</form>